{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Home Assistant",
      "type": "debugpy",
      "request": "launch",
      "module": "homeassistant",
      "justMyCode": false,
      "args": ["--config", "${workspaceFolder}/config", "--debug"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONDONTWRITEBYTECODE": "1"
      }
    },
    {
      "name": "Home Assistant (skip pip)",
      "type": "debugpy",
      "request": "launch",
      "module": "homeassistant",
      "justMyCode": false,
      "args": [
        "--config",
        "${workspaceFolder}/config",
        "--debug",
        "--skip-pip"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONDONTWRITEBYTECODE": "1"
      }
    },
    {
      "name": "PyTap Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "justMyCode": true,
      "args": [
        "tests/",
        "-vv",
        "--tb=short"
      ],
      "console": "integratedTerminal"
    }
  ]
}
